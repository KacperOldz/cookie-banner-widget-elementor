{"content":[{"id":"39ea1211","settings":{"content_width":"full","min_height":{"unit":"vh","size":7,"sizes":[]},"min_height_tablet":{"unit":"em","size":"","sizes":[]},"min_height_mobile":{"unit":"em","size":"","sizes":[]},"flex_direction":"row","flex_justify_content":"center","flex_align_items":"center","flex_wrap":"nowrap","flex_align_content":"center","background_background":"classic","padding":{"unit":"px","top":"24","right":"24","bottom":"24","left":"24","isLinked":true},"sticky":"bottom","__dynamic__":[],"__globals__":{"background_color":"globals\/colors?id=secondary"},"_element_id":"cookies-container","_title":"Cookies"},"elements":[{"id":"457151b1","settings":{"html":"<style>\n    #cookie-banner {\n        width: 100%;\n        text-align: center;\n        color: white;\n    }\n\n    #accept-cookies, #reject-cookies {\n        border: none;\n        border-radius: 0;\n        font-size: 16px;\n        padding: 5px;\n        width: 90px;\n        margin: 0 18px 0 0;\n    }\n\n    #cookie-banner a {\n        color: wheat;\n    }\n\n    .accept, .reject {\n        transition: transform 0.5s;\n        width: 100%;\n    }\n\n    .accept {\n        transform: translateX(100%);\n    }\n\n    .reject {\n        transform: translateX(-100%);\n    }\n<\/style>\n\n<script src=\"https:\/\/ajax.googleapis.com\/ajax\/libs\/jquery\/3.5.1\/jquery.min.js\"><\/script>\n<script>\n    function setCookie(cname, cvalue, exdays) \n    {\n        const d = new Date();\n        d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));\n        let expires = \"expires=\" + d.toUTCString();\n        document.cookie = cname + \"=\" + cvalue + \";\" + expires + \";path=\/\";\n    }\n\n    function deleteCookie(cname) \n    {\n        const d = new Date();\n        d.setTime(d.getTime() + (24 * 60 * 60 * 1000));\n        let expires = \"expires=\" + d.toUTCString();\n        document.cookie = cname + \"=;\" + expires + \";path=\/\";\n    }\n\n    function getCookie(cname) \n    {\n        let name = cname + \"=\";\n        let decodedCookie = decodeURIComponent(document.cookie);\n        let ca = decodedCookie.split(';');\n        for (let i = 0; i < ca.length; i++) {\n            let c = ca[i];\n            while (c.charAt(0) === ' ') {\n                c = c.substring(1);\n            }\n            if (c.indexOf(name) === 0) {\n                return c.substring(name.length, c.length);\n            }\n        }\n        return \"\";\n    }\n\n    function acceptCookieConsent() \n    {\n        deleteCookie('user_cookie_consent');\n        setCookie('user_cookie_consent', 1, 30);\n    }\n    \n    \n    \n\n    let cookie_consent = getCookie(\"user_cookie_consent\");\n    if (cookie_consent !== \"\") {\n        document.getElementById(\"cookies-container\").style.display = \"none\";\n    } else {\n        document.getElementById(\"cookies-container\").style.display = \"block\";\n    }\n\n    jQuery(document).ready(function ($) {\n        $('#accept-cookies').click(function () {\n            $('#cookies-container').addClass('accept');\n            acceptCookieConsent();\n        });\n\n        $('#reject-cookies').click(function () {\n            $('#cookies-container').addClass('reject');\n        });\n    });\n<\/script>\n\n<div id=\"cookie-banner\">\n    <p>We use cookies to ensure you get the best experience on our website. <a href=\"\/privacy-policy\">Learn More<\/a><\/p>\n    <button id=\"reject-cookies\">Reject<\/button>\n    <button id=\"accept-cookies\">Accept<\/button>\n<\/div>\n","_element_width":"inherit","motion_fx_range":"page"},"elements":[],"isInner":false,"widgetType":"html","elType":"widget"}],"isInner":false,"elType":"container"}],"page_settings":[],"version":"0.4","title":"Cookies consent","type":"container"}